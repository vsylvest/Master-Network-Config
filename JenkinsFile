                templateType: 'job',
                jobTemplate: '47',
                importTowerLogs: true,
                inventory: '2',
                removeColor: false,
                verbose: true,
                credential: '6',  
                extraVars: """---
"""
        )
    }
}

stage('Send Notification of Result') {
    node {

        //you must specify your own ids
        ansibleTower(
                towerServer: 'tower',
                templateType: 'job',
                jobTemplate: '18',
                importTowerLogs: true,
                inventory: '1',
                removeColor: false,
                verbose: true,
                credential: '3',  
                extraVars: """---
"""
        )
    }
}
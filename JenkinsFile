stage('Backup Current Configuration') {
    node {

        //you must specify your own ids
        ansibleTower(
                towerServer: 'tower',
                templateType: 'job',
                jobTemplate: '15',
                importTowerLogs: true,
                inventory: '2',
                removeColor: false,
                verbose: true,
                credential: '6',  
                extraVars: """---
"""
        )
    }
}



stage('Push Config Changes') {
   try {
    node {
        //you must specify your own ids
                   ansibleTower(
                          towerServer: 'tower',
                          templateType: 'job',
                          jobTemplate: '17',
                          importTowerLogs: true,
                          inventory: '2',
                          removeColor: false,
                          verbose: true,
                          credential: '6',  
                          extraVars: """---
"""
                   )  
    }
   } catch(error) {
     echo "First build failed, let's retry if accepted"
     retry(2) {
    node {
        //you must specify your own ids
                   ansibleTower(
                          towerServer: 'tower',
                          templateType: 'job',
                          jobTemplate: '17',
                          importTowerLogs: true,
                          inventory: '2',
                          removeColor: false,
                          verbose: true,
                          credential: '6',  
                          extraVars: """---
"""
                   )  
    }
     }
   }
}



